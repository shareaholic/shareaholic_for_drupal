  //}

  public function testHasBadResponse() {
    $response = NULL;
    $type = 'test';
    $result = ShareaholicUtilities::has_bad_response($response, $type);
    $this->assertTrue($result, 'It returns true when the response is null');

    $response = new stdClass;
    $response->error = 'There is an error';
    $result = ShareaholicUtilities::has_bad_response($response, $type);
    $this->assertTrue($result, 'It returns true when the response has an error');

    $response = new stdClass;
    $response->code = 500;
    $result = ShareaholicUtilities::has_bad_response($response, $type);
    $this->assertTrue($result, 'It returns true when the response code is not between 200-210');


    $response = new stdClass;
    $response->code = 200;
    $response->data = 'This is not a json response';
    $result = ShareaholicUtilities::has_bad_response($response, $type, true);
    $this->assertTrue($result, 'It returns true when the expected json response is not valid json');


    $response = new stdClass;
    $response->code = 200;
    $response->data = '{"test": "test"}';
    $result = ShareaholicUtilities::has_bad_response($response, $type, true);
    $this->assertFalse($result, 'It returns false when the json response parses correctly');

  }

  public function testAssetUrl() {
    $asset_url = ShareaholicUtilities::asset_url('assets/test.js');
    $this->assertNotNull($asset_url, 'The asset url should not be null');
  }

  public function testHasTosAndApiKey() {
    ShareaholicUtilities::accept_terms_of_service();
    ShareaholicUtilities::update_options(array( 'api_key' => 'key') );
    $result = ShareaholicUtilities::has_tos_and_apikey();
    $this->assertTrue($result, 'It returns true when ToS and apikey are in the database');

    variable_del('shareaholic_settings');
    $result = ShareaholicUtilities::has_tos_and_apikey();
    $this->assertFalse($result, 'It returns false when there is no apikey');
  }

  public function testDestroySettings() {
    variable_set('shareaholic_settings', 'test');
    ShareaholicUtilities::destroy_settings();
    $this->assertNull(\Drupal::state()->get('shareaholic_settings'), 'Shareaholic settings should be destroyed');
  }
  
  public function testGetVersion() {
    $version = ShareaholicUtilities::get_version();
    $this->assertNotNull($version, 'Shareaholic version should not be null');
  }

  public function testCleanString() {
    $string = '&hello';
    $this->assertEqual('&amp;hello', ShareaholicUtilities::clean_string($string), 'It should clean out ampersands');

    $string = "'hello'";
    $this->assertEqual('&#039;hello&#039;', ShareaholicUtilities::clean_string($string), 'It should clean out single quotes');

    $string = '"hello"';
    $this->assertEqual('&quot;hello&quot;', ShareaholicUtilities::clean_string($string), 'It should clean out double quotes');

    $string = '&hello&amp;';
    $this->assertEqual('&amp;hello&amp;', ShareaholicUtilities::clean_string($string), 'It should clean out mixed decoded/encoded specialchars');

    $string = ' hello ';
    $this->assertEqual('hello', ShareaholicUtilities::clean_string($string), 'It should trim string of whitespaces before and after');

    $string = 'HEllO ';
    $this->assertEqual('hello', ShareaholicUtilities::clean_string($string), 'It should lower case the string');

    $string = ',hello world ,';
    $this->assertEqual('hello world', ShareaholicUtilities::clean_string($string), 'It should trim out commas in a keyword before and after');
  }

  public function testAssociativeArraySlice() {
    $test_array = array(
      'key1' => 'value1',
      'key2' => 'value2',
      'key3' => 'value3'
    );

    $result = ShareaholicUtilities::associative_array_slice($test_array, array('key1', 'key3'));
    $this->assertTrue(is_array($result), 'It should return an array');
    $this->assertEqual(2, count($result), 'When asked to slice two keys, the returned array should be two items long');
    $this->assertTrue((isset($result['key1']) && isset($result['key3'])), 'The sliced keys should not be returned');
    $this->assertFalse(isset($result['key2']), 'Any other key should not be returned');
  }

  public function testTurnOnLocations() {
    $turn_on = array(
      'share_buttons' => array('below' => 1)
    );

    $turn_off = array(
      'share_buttons' => array('above' => 2)
    );

    ShareaholicUtilities::turn_on_locations($turn_on, $turn_off);
    $share_buttons = ShareaholicUtilities::get_option('share_buttons');
    $result1 = $share_buttons['above'];
    $result2 = $share_buttons['below'];
    $this->assertEqual('off', $result1, 'The above option should be off');
    $this->assertEqual('on', $result2, 'The below option should be on');
  }

  public function testPageTypes() {
    $page_types = ShareaholicUtilities::page_types();
    $this->assertTrue(!empty($page_types), 'The page types array should not be empty');
    $isFound = false;
    foreach($page_types as $key => $page_type) {
      if($page_type->type === 'teaser') {
        $isFound = true;
      }
    }
    $this->assertTrue($isFound, 'There should be a teaser option for page types');
  }

  private function testNotATest() {
    echo 'Not a test';
  }
}